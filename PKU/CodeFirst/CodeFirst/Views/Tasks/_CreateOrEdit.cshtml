@model CodeFirst.Models.Task

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.HoursDone)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.HoursDone)
    @Html.ValidationMessageFor(model => model.HoursDone)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.StatusId)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.StatusId)
    @Html.ValidationMessageFor(model => model.StatusId)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.Description)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Description)
    @Html.ValidationMessageFor(model => model.Description)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.Notes)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Notes)
    @Html.ValidationMessageFor(model => model.Notes)
</div>

<div class="editor-label">
    Sheet
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.SheetId, ((IEnumerable<CodeFirst.Models.Sheet>)ViewBag.PossibleSheets).Select(option => new SelectListItem {
        Text = Html.DisplayTextFor(_ => option).ToString(), 
        Value = option.SheetId.ToString(),
        Selected = (Model != null) && (option.SheetId == Model.SheetId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.SheetId)
</div>
